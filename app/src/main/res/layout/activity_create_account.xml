<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/contaner_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/quattrocento_sans"
            android:text="Create Account"
            android:textAlignment="center"
            android:textColor="@color/mainText"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="53dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/quattrocento_sans"
            android:text="Create an account to enjoy all the services for free!"
            android:textAlignment="center"
            android:textColor="@color/texthint"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/contaner_edittext"
            android:fontFamily="@font/karla"
            android:hint="Full Name"
            android:paddingLeft="30dp"
            android:textColor="@color/texthint"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/contaner_edittext"
            android:fontFamily="@font/karla"
            android:hint="User Name"
            android:paddingLeft="30dp"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/contaner_edittext"
            android:fontFamily="@font/karla"
            android:hint="Email Address"
            android:paddingLeft="30dp"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/contaner_edittext"
            android:fontFamily="@font/karla"
            android:hint="password"
            android:paddingLeft="30dp"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/white"
                android:buttonTint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quattrocento_sans"
                android:text="I have read and agree to the "
                android:textColor="@color/texthint"
                android:textSize="14dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quattrocento_sans"
                android:text="Terms of Service"
                android:textColor="@color/mainText"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/conaner_button"
            app:backgroundTint="@color/mainText"
            android:fontFamily="@font/quattrocento_sans"
            android:gravity="center"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <View
                android:layout_width="90dp"
                android:layout_height="3dp"
                android:layout_marginTop="12dp"
                android:background="#992F2E41"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="Or"
                android:textColor="@color/mainText"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="90dp"
                android:layout_height="3dp"
                android:layout_marginTop="12dp"
                android:background="#992F2E41"></View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/google"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/google" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/facebook" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quattrocento_sans"
                android:gravity="center_horizontal"
                android:text="Already Have An Account? "
                android:textColor="@color/texthint"
                android:textSize="16dp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textSignInPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quattrocento_sans"
                    android:gravity="center_horizontal"
                    android:text=" Sign In"
                    android:textColor="@color/mainText"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/black"></View>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>